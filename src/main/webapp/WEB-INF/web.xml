<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>FilterDemo</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>SignupController</servlet-name>
    <servlet-class>com.Controller.SignupController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupController</servlet-name>
    <url-pattern>/SignupController</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
  <filter>
    <filter-name>SignupFilter</filter-name>
    <filter-class>com.Filter.SignupFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SignupFilter</filter-name>
    <url-pattern>/SignupController</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>DuplicateEmailCheckFilter</filter-name>
    <filter-class>com.Filter.DuplicateEmailCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>DuplicateEmailCheckFilter</filter-name>
    <url-pattern>/SignupController</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>com.listener.ServerLogListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.listener.UserCounterListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>com.Controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/LoginController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LogoutController</display-name>
    <servlet-name>LogoutController</servlet-name>
    <servlet-class>com.Controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutController</servlet-name>
    <url-pattern>/LogoutController</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>2</session-timeout>
  </session-config>
  <servlet>
    <description></description>
    <display-name>ExtendSessionController </display-name>
    <servlet-name>ExtendSessionController</servlet-name>
    <servlet-class>com.Controller.ExtendSessionController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExtendSessionController</servlet-name>
    <url-pattern>/ExtendSessionController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>SaveCookieController</display-name>
    <servlet-name>SaveCookieController</servlet-name>
    <servlet-class>com.Controller.SaveCookieController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveCookieController</servlet-name>
    <url-pattern>/SaveCookieController</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AdminLoginController</display-name>
    <servlet-name>AdminLoginController</servlet-name>
    <servlet-class>com.Controller.AdminLoginController</servlet-class>
  
  <init-param>
			<param-name>email</param-name>
			<param-value>admin@gmail.com</param-value>
		</init-param>
		<init-param>
			<param-name>password</param-name>
			<param-value>admin</param-value>
		</init-param>
  </servlet>
		
		
		
  <servlet-mapping>
    <servlet-name>AdminLoginController</servlet-name>
    <url-pattern>/AdminLoginController</url-pattern>
  </servlet-mapping>
</web-app>